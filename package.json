{
  "name": "activit-monorepo",
  "private": true,
  "workspaces": [
    "api",
    "app"
  ],
  "scripts": {
    "clean:api": "npm run clean --workspace=api",
    "clean:app": "npm run clean --workspace=app",
    "clean": "npm-run-all --parallel clean:app clean:api",
    "build:api": "npm run build --workspace=api",
    "build:app": "npm run build --workspace=app",
    "build": "npm-run-all --parallel build:api build:app",
    "dev:api": "npm run start --workspace=api",
    "dev:app": "npm run dev --workspace=app",
    "dev:swa": "swa start",
    "dev": "npm-run-all --parallel dev:api dev:swa",
    "swa": "npm run build && swa start ./app/dist --api-location ./api",
    "swa:prev": "npm run build && swa deploy --config swa-cli.config.json --env preview",
    "swa:prod": "npm run build && swa deploy --config swa-cli.config.json --env production",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.6",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.8.0"
  }
}
