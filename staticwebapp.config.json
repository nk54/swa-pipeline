{
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/api/scorecards",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/users",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    }
  ],
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, OPTIONS"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*"]
  }
}
